@model Student
@{
    ViewData["Title"] = "Student";
    List<Student> allStudents = (List<Student>)ViewData["AllStudents"];
}

<h1>Student Page</h1>

<hr />

<!-- Button to open add student modal-->
<button class="btn btn-success" data-toggle="modal" data-target="#AddStudentModal">Add Student</button>

<!-- Add Student Modal -->
<div id="AddStudentModal" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Add Student</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <form asp-action="Index">
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.LabelFor(model =>model.FirstName, htmlAttributes: new { @class = "control-label" })
                        @Html.ValidationMessageFor(model =>model.FirstName, "", new { @class = "text-danger" })
                        @Html.EditorFor(model =>model.FirstName, new { htmlAttributes = new { @class = "form-control" } })

                        @*<label asp-for="FirstName" class="control-label">First Name</label>
                            <input class="form-control" type="text" asp-for="FirstName" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>*@
                        <br />

                        <label asp-for="LastName" class="control-label">Last Name</label>
                        <span asp-validation-for="LastName" class="text-danger"></span>
                        <input class="form-control" type="text" asp-for="LastName" />

                        <br />

                        <label asp-for="Email" class="control-label">Email</label>
                        <span asp-validation-for="Email" class="text-danger"></span>
                        <input class="form-control" type="email" asp-for="Email" />

                        <br />

                        <label asp-for="RegistrationDate" class="control-label">Registration Date</label>
                        <span asp-validation-for="RegistrationDate" class="text-danger"></span>
                        <input class="form-control" type="date" value="@DateTime.Now.ToString("yyyy-MM-dd")" asp-for="RegistrationDate" />


                    </div>
                    <button type="submit" class="btn btn-primary">Add Student</button>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>

<h2 class="pt-5">All Students</h2>

<table id="BasicDataTable" class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th class="th-sm">
                Student ID
            </th>
            <th class="th-sm">
                First Name
            </th>
            <th class="th-sm">
                Last Name
            </th>
            <th class="th-sm">
                Student Email
            </th>
            <th class="th-sm">
                Date Registered
            </th>
            <th class="th-sm">
                Delete?
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in allStudents)
        {
            <tr>
                <td>@student.StudentId</td>
                <td>@student.FirstName</td>
                <td>@student.LastName</td>
                <td>@student.Email</td>
                <td>@student.RegistrationDate.ToString("MMM dd, yyyy")</td>
                <td><a asp-route-id="@student.StudentId" asp-action="Delete" asp-controller="Student" class="btn btn-danger">X</a></td>
            </tr>
        }

    </tbody>
    <tfoot>
        <tr>
            <th class="th-sm">
                Student ID
            </th>
            <th class="th-sm">
                First Name
            </th>
            <th class="th-sm">
                Last Name
            </th>
            <th class="th-sm">
                Student Email
            </th>
            <th class="th-sm">
                Date Registered
            </th>
            <th class="th-sm">
                Delete?
            </th>
        </tr>
    </tfoot>
</table>

<script>
    var openModal = "@ViewData["openModal"]";
    if(openModal == "True"){
        $('#AddStudentModal').modal('show');
    }
    
</script>
