@using StudentHelp.Views.Assignment.POCO
@model Assignment
@{
    ViewData["Title"] = "Assignments";
    List<AssignmentPOCO> allAssignments = (List<AssignmentPOCO>)ViewData["Assignments"];
}

<h1>Assignments Page</h1>

<hr />

<!-- Button to open add assignment modal-->
<button class="btn btn-success" data-toggle="modal" data-target="#AddAssignmentModal">Add Assignment</button>

<!-- Add Assignment Modal -->
<div id="AddAssignmentModal" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Add Assignment</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <form asp-action="Index">
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        <label asp-for="CourseId" class="control-label">Select Course</label>
                        <select asp-for="CourseId" class="form-control" asp-items="ViewBag.Courses"></select>
                        <span asp-validation-for="CourseId" class="text-danger"></span>

                        <br />

                        <label asp-for="Name" class="control-label">Assignment Name</label>
                        <span asp-validation-for="Name" class="text-danger"></span>
                        <input class="form-control" type="text" asp-for="Name" />

                        <br />

                        <label asp-for="Description" class="control-label">Assignment Description</label>
                        <span asp-validation-for="Description" class="text-danger"></span>
                        <textarea class="form-control" type="email" asp-for="Description"></textarea>

                        <br />

                        <label asp-for="AssignedDate" class="control-label">Assigned Date</label>
                        <span asp-validation-for="AssignedDate" class="text-danger"></span>
                        <input class="form-control" type="date" asp-for="AssignedDate" value="@DateTime.Now.ToString("yyyy-MM-dd")" />

                        <br />

                        <label asp-for="DueDate" class="control-label">Due Date</label>
                        <span asp-validation-for="DueDate" class="text-danger"></span>
                        <input class="form-control" type="date" asp-for="DueDate" />

                    </div>
                    <button type="submit" class="btn btn-primary">Add Assignment</button>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>

<h2>All Assignments</h2>

<table id="BasicDataTable" class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th class="th-sm">
                Assignment ID
            </th>
            <th class="th-sm">
                Course
            </th>
            <th class="th-sm">
                Assignment Name
            </th>
            <th class="th-sm">
                Description
            </th>
            <th class="th-sm">
                Assigned
            </th>
            <th class="th-sm">
                Due
            </th>
            <th class="th-sm">
                Students
            </th>
            <th class="th-sm">
                Delete
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var assignment in allAssignments)
        {
            <tr>
                <td>@assignment.AssignmentId</td>
                <td>@assignment.CourseName</td>
                <td>@assignment.Name</td>
                <td>@assignment.Description</td>
                <td>@assignment.AssignedDate.ToString("yyyy-MM-dd")</td>
                <td>@assignment.DueDate.ToString("yyyy-MM-dd")</td>
                <td><a asp-action="StudentAssignments" asp-controller="Assignment" asp-route-id="@assignment.AssignmentId" class="btn btn-info"> 	
&#128269;</a></td>
                <td><a asp-route-id="@assignment.CourseId" asp-action="Delete" asp-controller="Course" class="btn btn-danger">X</a></td>
            </tr>
        }

    </tbody>
    <tfoot>
        <tr>
            <th class="th-sm">
                Assignment ID
            </th>
            <th class="th-sm">
                Course
            </th>
            <th class="th-sm">
                Assignment Name
            </th>
            <th class="th-sm">
                Description
            </th>
            <th class="th-sm">
                Assigned
            </th>
            <th class="th-sm">
                Due
            </th>
            <th class="th-sm">
                Students
            </th>
            <th class="th-sm">
                Delete
            </th>
        </tr>
    </tfoot>
</table>

<script>
    var openModal = "@ViewData["openModal"]";
    if(openModal == "True"){
        $('#AddAssignmentModal').modal('show');
    }

</script>