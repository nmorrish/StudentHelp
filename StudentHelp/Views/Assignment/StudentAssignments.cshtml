@using StudentHelp.Views.Assignment.POCO
@model List<StudentAssignmentPOCO>
@{
    ViewData["Title"] = "StudentAssignments";
}

@if (Model.Count == 0)
{
    <h1>No Students assigned to this assignment</h1>
}
else
{
    <h1>Student Assignments for @Model[0].AssignmentName</h1>

    <table id="BasicDataTable" class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
        <thead>
            <tr>
                <th class="th-sm">
                    First Name
                </th>
                <th class="th-sm">
                    Last Name
                </th>
                <th class="th-sm">
                    Due Date
                </th>
                <th class="th-sm">
                    Date submitted
                </th>
                <th class="th-sm">
                    Grade
                </th>
                <th class="th-sm">
                    Update
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var assignment in Model)
            {
                <tr>
                    <td>@assignment.FirstName</td>
                    <td>@assignment.LastName</td>
                    <td>@assignment.DueDate.ToString("yyyy-MM-dd")</td>
                    <td>
                        @if (assignment.DateSubmitted == null)
                        {
                            <text>Pending</text>
                        }
                        else
                        {
                            <text>assignment.DateSubmitted.GetValueOrDefault().ToString("yyyy-MM-dd")</text>
                        }
                    </td>
                    <td>@assignment.Grade</td>
                    <td><a class="btn btn-info">&#128203;</a></td>
                </tr>
            }

        </tbody>
        <tfoot>
            <tr>
                <th class="th-sm">
                    First Name
                </th>
                <th class="th-sm">
                    Last Name
                </th>
                <th class="th-sm">
                    Due Date
                </th>
                <th class="th-sm">
                    Date submitted
                </th>
                <th class="th-sm">
                    Grade
                </th>
                <th class="th-sm">
                    Update
                </th>
            </tr>
        </tfoot>
    </table>

}

