@using StudentHelp.Views.Assignment.POCO
@{
    ViewData["Title"] = "StudentAssignments";
    List<StudentAssignmentPOCO> studentAssignments = (List<StudentAssignmentPOCO>) ViewData["StudentAssignments"];
}

<h1>Student Assignments for @studentAssignments[0].AssignmentName</h1>

<table id="BasicDataTable" class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th class="th-sm">
                First Name
            </th>
            <th class="th-sm">
                Last Name
            </th>
            <th class="th-sm">
                Due Date
            </th>
            <th class="th-sm">
                Date submitted
            </th>
            <th class="th-sm">
                Grade
            </th>
            <th class="th-sm">
                Update
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var assignment in studentAssignments)
        {
            <tr>
                <td>@assignment.FirstName</td>
                <td>@assignment.LastName</td>
                <td>@assignment.DueDate.ToString("yyyy-MM-dd")</td>
                <td>@assignment.DateSubmitted.GetValueOrDefault().ToString("yyyy-MM-dd")</td>
                <td>@assignment.Grade</td>
                <td><a class="btn btn-info">&#128203;</a></td>
            </tr>
        }

    </tbody>
    <tfoot>
        <tr>
            <th class="th-sm">
                First Name
            </th>
            <th class="th-sm">
                Last Name
            </th>
            <th class="th-sm">
                Due Date
            </th>
            <th class="th-sm">
                Date submitted
            </th>
            <th class="th-sm">
                Grade
            </th>
            <th class="th-sm">
                Update
            </th>
        </tr>
    </tfoot>
</table>

