@model Course
@{
    ViewData["Title"] = "Course Page";
    List<Course> allCourses = (List<Course>)ViewData["AllCourses"];
}

<h1>Course Page</h1>

<hr />

<!-- Button to open add course modal-->
<button class="btn btn-success" data-toggle="modal" data-target="#AddCourseModal">Add Course</button>

<a asp-action="Enrollment" asp-controller="Course" class="btn btn-primary">Edit Enrollment</a>

<!-- Add Course Modal -->
<div id="AddCourseModal" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Add Course</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <form asp-action="Index">
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        <label asp-for="Name" class="control-label">Course Name</label>
                        <span asp-validation-for="Name" class="text-danger"></span>
                        <input class="form-control" type="text" asp-for="Name" />

                        <br />

                        <label asp-for="Description" class="control-label">Course Description</label>
                        <span asp-validation-for="Description" class="text-danger"></span>
                        <textarea class="form-control" type="email" asp-for="Description" ></textarea>

                    </div>
                    <button type="submit" class="btn btn-primary">Add Course</button>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>

<h2 class="pt-5">All Courses</h2>

<table id="BasicDataTable" class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th class="th-sm">
                Course ID
            </th>
            <th class="th-sm">
                Name
            </th>
            <th class="th-sm">
                Description
            </th>
            <th class="th-sm">
                Delete?
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var course in allCourses)
        {
            <tr>
                <td>@course.CourseId</td>
                <td>@course.Name</td>
                <td>@course.Description</td>
                <td><a asp-route-id="@course.CourseId" asp-action="Delete" asp-controller="Course" class="btn btn-danger">X</a></td>
            </tr>
        }

    </tbody>
    <tfoot>
        <tr>
            <th class="th-sm">
                Course ID
            </th>
            <th class="th-sm">
                Name
            </th>
            <th class="th-sm">
                Description
            </th>
            <th class="th-sm">
                Delete?
            </th>
        </tr>
    </tfoot>
</table>

<script>
    var openModal = "@ViewData["openModal"]";
    if(openModal == "True"){
        $('#AddCourseModal').modal('show');
    }

</script>
