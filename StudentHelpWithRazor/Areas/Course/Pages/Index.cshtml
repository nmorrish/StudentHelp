@page
@model StudentHelpRazor.Areas.Course.Pages.IndexModel
@{
    ViewData["Title"] = "Courses";
}

<h1>Courses</h1>

<p>
    <a asp-page="Create" class="btn btn-primary">Create New</a>
</p>


<table id="BasicDataTable" class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th class="th-sm">
                Course ID
            </th>
            <th class="th-sm">
                Course Name
            </th>
            <th class="th-sm">
                Course Description
            </th>
            <th class="th-sm">
                detail/edit/delete
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var course in Model.Courses)
        {
            <tr>
                <td>@course.CourseId</td>
                <td>@course.Name</td>
                <td>@course.Description</td>
                <td>
                    <a asp-page="./Detail" asp-route-id="@course.CourseId" class="btn btn-info btn-sm">&#128269;</a>
                    <a asp-page="./Edit" asp-route-id="@course.CourseId" class="btn btn-primary btn-sm">&#128203;</a>
                    <a asp-page="./Delete" asp-route-id="@course.CourseId" class="btn btn-danger btn-sm">&#128465;</a>
                </td>
            </tr>
        }

    </tbody>
    <tfoot>
        <tr>
            <th class="th-sm">
                Course ID
            </th>
            <th class="th-sm">
                Course Name
            </th>
            <th class="th-sm">
                Course Description
            </th>
            <th class="th-sm">
                detail/edit/delete
            </th>
        </tr>
    </tfoot>
</table>