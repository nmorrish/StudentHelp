            </div>
            <div class="form-group">
                <label asp-for="StudentCourse.CompletionDate" class="control-label"></label>
                <input asp-for="StudentCourse.CompletionDate" class="form-control" />
                <span asp-validation-for="StudentCourse.CompletionDate" class="text-danger"></span>
            </div>
